generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  createdAt DateTime @default(now())
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  @default("user")
  createdAt DateTime @default(now())
}
